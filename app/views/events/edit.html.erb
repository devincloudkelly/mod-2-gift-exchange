<h1>Edit Gift Exchange</h1>

<%= form_for @event do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :date %>
<%= f.date_select :date %>
<%= f.label :dollar_amt_limit %>
<%= f.number_field :dollar_amt_limit %>
<%= f.label :description %>
<%= f.text_area :description %>
<%= f.submit %>
<% end %>