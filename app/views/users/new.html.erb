<h1>Create New User</h1>

<div class="form">
<%= form_for @user do |f| %>
<%= f.label :name %>
<%= f.text_field :name%>
<%= f.label :email %>
<%= f.text_field :email%>
<%= f.label :password %>
<%= f.password_field :password%>
<%= f.label :password_confirmation %>
<%= f.password_field :password_confirmation%>
<%= f.submit %>
<% end %>
</div>

<p>Already have an account? <%= link_to "Log in", login_path %>.</p>